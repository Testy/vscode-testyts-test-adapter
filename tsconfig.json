{
    "compilerOptions": {
        "target": "es2016",
        "lib": [
            "es2016"
        ],
        "module": "commonjs",
        "outDir": "out",
        "importHelpers": true,
        "sourceMap": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ]
}